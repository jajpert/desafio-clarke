{
	"env": {
		"node": true,
		"es2021": true
	},
	"extends": ["standard-with-typescript", "prettier"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"@typescript-eslint/no-explicit-any": "warn",
		"@typescript-eslint/consistent-type-definitions": ["warn", "type"],
		"@typescript-eslint/no-require-imports": "error"
	},
	"ignorePatterns": [
		"node_modules"
	]
}